@using BankingApp.Core.Application.ViewModels.CreditCard;
@model List<CreditCardViewModel>
@{
    ViewData["Title"] = "Mis tarjetas de créditos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="p-2 rounded-2 mb-3 text-dark">
                <h1 class="text-lg-center">Pague sus tarjetas de créditos</h1>
            </div>
            <div class="card" style="border: 0px;">
                @if (Model == null || Model.Count == 0)
                {
                    <h3 class="text-lg-center mb-3">No tiene tarjetas de créditos</h3>
                }
                else
                {
                    <div class="card-body">
                        <div class="row">
                            @foreach (CreditCardViewModel item in Model)
                            {
                                <div class="col-4 mb-3 card-sizing">
                                    <div class="card shadow-sm mx-lg-2">
                                        <div class="card-body">
                                            <h3>@item.Id</h3>
                                        </div>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item color-card">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <small>Crédito disponible: <span class="fw-bold">@item.AvailableCredit</span></small>
                                                </div>
                                            </li>
                                            <li class="list-group-item color-card">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <small>Limite: <span class="fw-bold">@item.Limit</span></small>
                                                </div>
                                            </li>
                                            <li class="list-group-item color-card">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <small>Debe: <span class="fw-bold">@item.Debit</span></small>
                                                </div>
                                            </li>

                                            @if (item.Debit == 0)
                                            {
                                                <li class="list-group-item color-card">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <small><span class="fw-bold">Usted esta al día con esta tarjeta</span></small>
                                                    </div>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="list-group-item color-card">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div class="btn-group">
                                                            <a asp-controller="Client" asp-action="MakeCreditCardPay" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Pagar</a>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>