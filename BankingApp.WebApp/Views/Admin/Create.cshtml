@using BankingApp.Core.Application.ViewModels.User;
@model SaveUserViewModel

@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid">
    
    <div class="row">
        <div class="card shadow-sm contCardEditAdmiGeneric">
            <div class="card-header bg-info text-light cont_List_Friend_Title">
                <h4>Creacion de usuario</h4>
            </div>
            @if (Model.HasError)
            {
                <p class="text-danger">@Model.Error</p>
            }
            <div class="card-body contCard">
                <form class="row" id="forms_Add_User" asp-controller="Admin" asp-action="Create">
                    <div class="mb-3 row">
                        <label asp-for="FirstName" class="form-label">Nombre</label>
                        <input type="text" asp-for="FirstName" class="form-control" id="inputPassword">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="LastName" class="form-label">Apellido</label>
                        <input type="text" asp-for="LastName" class="form-control" id="inputPassword">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Username" class="form-label">Usuario</label>
                        <input type="text" asp-for="Username" class="form-control" id="inputPassword">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputPassword" asp-for="CardIdentificantion" class="form-label">Cédula</label>
                        <input type="text" class="form-control" asp-for="CardIdentificantion" id="inputPassword">
                        <span asp-validation-for="CardIdentificantion" class="text-danger"></span>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputPassword" asp-for="Email" class="form-label">Correo</label>
                        <input type="text" asp-for="Email" class="form-control" id="inputPassword">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputPassword" asp-for="Password" class="form-label">Contraseña</label>
                        <input  asp-for="Password" class="form-control" id="inputPassword">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputPassword" asp-for="ConfirmPassword" class="form-label">Confirmar contraseña</label>
                        <input class="form-control" asp-for="ConfirmPassword" id="inputPassword">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputPassword" class="form-label" asp-for="TypeUser">Tipo de usuario</label>
                        <select class="form-select selectUser" asp-for="TypeUser" aria-label="Default select example">
                            <option value="Administrador">Administrador</option>
                            <option value="Cliente" id="cliente">Cliente</option>
                            @* Hacer condiciones en el controlador para no guardar valores diferentes a usuarios: Administrador o Cliente *@
                        </select>
                        <span asp-validation-for="TypeUser" class="text-danger"></span>
                    </div>

                    <div class="mb-3 row">
                        <label for="inputPassword" hidden="hidden" asp-for="Amount" class="form-label labeltHidden">Monto inicial</label>
                        <input type="hidden" step="any" asp-for="Amount" class="form-control inputHidden" id="inputPassword">
                    </div>

                    <div class="btn-group">
                        <button type="submit" class="btn btn-outline-primary mb-3">Guardar</button>
                        <a class="btn btn-outline-warning mb-3" asp-controller="Admin" asp-action="Admin">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
        </div>

</div>

